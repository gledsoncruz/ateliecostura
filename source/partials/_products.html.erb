<% data.products.select{|product| product.available?}.each do |p| %>

    <!--div class="row"-->

        <div class="col-sm-3 listProducts">
            <div class="col-item">
                <div class="photo">
                    <%= image_tag("products/"+p.images[0]) %>
                </div>
                <div class="info">
                    <div class="row">
                        <div class="price col-md-6">
                            <h5><%= p.name %></h5>
                            <h5 class="price-text-color"><%= p.price %></h5>
                        </div>
                        <div class="rating hidden-sm col-md-6">
                            <!--i class="price-text-color fa fa-star"></i><i class="price-text-color fa fa-star">
                            </i><i class="price-text-color fa fa-star"></i><i class="price-text-color fa fa-star">
                            </i><i class="fa fa-star"></i-->
                        </div>
                    </div>
                    <div class="separator clear-left">
                        <p class="btn-add">
                            <!--i class="fa fa-shopping-cart"></i>
                            <a href="http://www.jquery2dotnet.com" class="hidden-sm">Add to cart</a-->
                        </p>


                        <p class="btn-details">
                            <i class="fa fa-list"></i><%= link_to "Detalhes",'detail/'+p.id.to_s+'.html', :class => 'detail', :relative => true %>
                        </p>
                    </div>
                        <div class="clearfix"></div>
                </div>
            </div>
        </div>
    <!--/div-->

<% end %>
